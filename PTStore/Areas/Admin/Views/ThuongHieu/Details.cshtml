@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model PTStore.Models.ThuongHieu

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#337ab7">Chi tiết Thương Hiệu</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên thương hiệu
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenThuongHieu)
        </dd>
        <dt>
            Link Hình ảnh
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HinhAnhThuongHieu)
        </dd>
        <dt>Hình ảnh</dt>
        <dd><img src=@Model.HinhAnhThuongHieu style="width: auto; height: 38px;" /></dd>
    </dl>
</div>
<div class="col-md-offset-1">
    <a class="btn btn-default" style="background-color: #337ab7; color:white; margin-top:1%" asp-action="Edit" asp-route-id="@Model.ThuongHieuId">Chỉnh sửa</a>
    <br/>
    
</div>
<a asp-action="Index">Quay về trang chủ</a>
