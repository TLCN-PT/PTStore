@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model PTStore.Models.ThuongHieu

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết Thương Hiệu</h2>

<div>
    <h4>Thương Hiệu</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên thương hiệu
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenThuongHieu)
        </dd>
        <dt>
            Link Hình ảnh
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HinhAnhThuongHieu)
        </dd>
        <dt>Hình ảnh</dt>
        <dd><img src=@Model.HinhAnhThuongHieu style="width: auto; height: 38px;" /></dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ThuongHieuId">Chỉnh sửa</a> |
    <a asp-action="Index">Quay lại</a>
</div>
