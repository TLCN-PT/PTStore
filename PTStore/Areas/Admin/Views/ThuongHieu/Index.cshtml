@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model IEnumerable<PTStore.Models.ThuongHieu>

@{
    ViewData["Title"] = "Thương hiệu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý thương hiệu</h2>
<div class="navbar-form navbar-left" style="padding-top:7px; padding-left:0px">
    <form class="navbar-form navbar-left" asp-area="Admin" asp-controller="ThuongHieu" asp-action="Index" method="post">
        <div class="input-group">
            <input type="text" name="search" value="" class="form-control" placeholder="Nhập nội dung ...">
            <span class="input-group-btn"><button type="button" class="btn btn-primary">Tìm kiếm</button></span>
        </div>
    </form>
</div>
<p style="float: right; padding-right: 145px; margin-top: 30px;">
    <a asp-action="Create">Thêm thương hiệu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên thương hiệu
            </th>
            <th>
                Link hình ảnh
            </th>
            <th>
                Số lượng điện thoại
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenThuongHieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HinhAnhThuongHieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienThoais.Count)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ThuongHieuId">Chỉnh sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.ThuongHieuId">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        document.getElementById("ahome").className = "";
        document.getElementById("abieudo").className = "";
        document.getElementById("adienthoai").className = "";
        document.getElementById("adonhang").className = "";
        document.getElementById("agopy").className = "";
        document.getElementById("athuonghieu").className = "active";

        document.getElementById("ataikhoan").className = "";
        document.getElementById("asubcriber").className = "";
        document.getElementById("aadmin").className = "";
        document.getElementById("acustomer").className = "";
    });
</script>
