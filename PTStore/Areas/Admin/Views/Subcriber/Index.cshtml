@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model IEnumerable<PTStore.Models.Subcriber>

@{
    ViewData["Title"] = "Subscribers";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#337ab7">Quản lý Subscribers</h2>

<div class="navbar-form navbar-left" style="padding-top:7px; padding-left:0px">
    <form class="navbar-form navbar-left">
        <div class="input-group">
            <input type="text" value="" class="form-control" placeholder="Nhập nội dung ...">
            <span class="input-group-btn"><button type="button" class="btn btn-primary">Tìm kiếm</button></span>
        </div>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @{
                        if (item.TrangThai == "DangDangKy")
                        {
                            <div>Đang đăng ký</div>
                        }
                        else
                        {
                            <div>Ngừng đăng ký</div>
                        }
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Sửa trạng thái</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        document.getElementById("ahome").className = "";
        document.getElementById("abieudo").className = "";
        document.getElementById("adienthoai").className = "";
        document.getElementById("adonhang").className = "";
        document.getElementById("agopy").className = "";
        document.getElementById("athuonghieu").className = "";

        document.getElementById("ataikhoan").className = "active";
        document.getElementById("asubcriber").className = "active";
        document.getElementById("aadmin").className = "";
        document.getElementById("acustomer").className = "";
    });
</script>
