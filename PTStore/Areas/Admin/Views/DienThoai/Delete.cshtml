@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model PTStore.Models.DienThoai

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#337ab7">Xóa điện thoại</h2>

<h4>Bạn có thật sự muốn xóa điện thoại này?</h4>
<div class="col-md-offset-1">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên điện thoại
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Tình trạng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TinhTrang)
        </dd>
        <dt>
            Hình ảnh
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HinhAnh)
        </dd>
        <dt>
            Giá kinh doanh
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>
        <dt>
            Giá gốc
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GiaGoc)
        </dd>
        <dt>
            Số lượng còn
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt>
            Thông số kỹ thuất
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.ThongSoKyThuatId)
        </dd>
        <dt>
            Thương Hiệu
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThuongHieu.TenThuongHieu)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="DienThoaiId" />
        <input style="background-color:#337ab7; color:white" type="submit" value="Xóa" class="btn btn-default" />

    </form>
    <a asp-action="Index">Quay lại trang chủ</a>
</div>
