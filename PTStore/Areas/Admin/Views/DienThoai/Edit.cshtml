@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model PTStore.Models.DienThoai

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#337ab7">Chỉnh sửa điện thoại</h2>

<hr />
<div class="row">
    <div class="col-md-6 col-md-offset-1">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DienThoaiId" />
            <input type="hidden" asp-for="ThongSoKyThuatId" />
            <div class="form-group">
                <label class="control-label">Tên điện thoại</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tình trạng</label>
                <select asp-for="TinhTrang" class="form-control">
                    <option value="DangKinhDoanh">Đang kinh doanh</option>
                    <option value="NgungKinhDoanh">Ngừng kinh doanh</option>
                </select>
                <span asp-validation-for="TinhTrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Link Hình ảnh</label>
                <input asp-for="HinhAnh" class="form-control" />
                <span asp-validation-for="HinhAnh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giá bán</label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giá gốc</label>
                <input asp-for="GiaGoc" class="form-control" />
                <span asp-validation-for="GiaGoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thương hiệu</label>
                <select asp-for="ThuongHieuId" class="form-control" asp-items="ViewBag.ThuongHieuId"></select>
                <span asp-validation-for="ThuongHieuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Màn hình</label>
                <input asp-for="ThongSoKyThuat.ManHinh" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hệ điều hành</label>
                <input asp-for="ThongSoKyThuat.HeDieuHanh" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Camera Sau</label>
                <input asp-for="ThongSoKyThuat.CameraSau" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Camera trước</label>
                <input asp-for="ThongSoKyThuat.CameraTruoc" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CPU</label>
                <input asp-for="ThongSoKyThuat.Cpu" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">RAM</label>
                <input asp-for="ThongSoKyThuat.Ram" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bộ nhớ trong</label>
                <input asp-for="ThongSoKyThuat.BoNhoTrong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thẻ Sim</label>
                <input asp-for="ThongSoKyThuat.TheSim" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Dung lượng Pin</label>
                <input asp-for="ThongSoKyThuat.DungLuongPin" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày ra mắt</label>
                <input type="date" asp-for="ThongSoKyThuat.NgayRaMat" class="form-control" />
                <span asp-validation-for="ThongSoKyThuat.NgayRaMat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="background-color:#337ab7; color:white" type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại trang chủ</a>
</div>

