@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model PTStore.Models.DienThoai

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="color:#337ab7">Chi tiết điện thoại</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên điện thoại
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            Tình trạng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TinhTrang)
        </dd>
        <dt>
            Link hình ảnh
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HinhAnh)
        </dd>
        <dt>Hình ảnh</dt>
        <dd>
            <img src="@Model.HinhAnh" style="height:100px; width:auto" />
        </dd>
        <dt>
            Giá bán
        </dt>
        <dd>
            @string.Format("{0:0,0}", Model.Gia) VND
        </dd>
        <dt>
            Giá gốc
        </dt>
        <dd>
            @string.Format("{0:0,0}", Model.GiaGoc) VND
        </dd>
        <dt>
            Số lượng còn
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        <dt>
            Tên thương hiệu
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThuongHieu.TenThuongHieu)
        </dd>
        <dt>
            Màn hình
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.ManHinh)
        </dd>
        <dt>
            Hệ điều hành
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.HeDieuHanh)
        </dd>
        <dt>
            Camera sau
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.CameraSau)
        </dd>
        <dt>
            Camera trước
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.CameraTruoc)
        </dd>
        <dt>
            CPU
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.Cpu)
        </dd>
        <dt>
            RAM
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.Ram)
        </dd>
        <dt>
            Bộ nhớ trong
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.BoNhoTrong)
        </dd>
        <dt>
            Thẻ sim
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.TheSim)
        </dd>
        <dt>
            Dung lượng pin
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThongSoKyThuat.DungLuongPin)
        </dd>
        <dt>
            Ngày ra mắt
        </dt>
        <dd>
            @Model.ThongSoKyThuat.NgayRaMat?.ToString("dd/MM/yyyy")
        </dd>
    </dl>
</div>
<div class="col-md-offset-1">
    <a class="btn btn-default" style="background-color:#337ab7; color:white" asp-action="Edit" asp-route-id="@Model.DienThoaiId">Chỉnh sửa</a> 
    <br/>
</div>
<div style="margin-top:2%">
    <a asp-action="Index">Quay lại trang chủ</a>
</div>
