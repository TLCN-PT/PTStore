@model PTStore.Common.ViewModels.SignupViewModel
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section>
    <!--form-->
    <div class="container-fluid" style="margin-bottom: 2%">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4" style="background-color:white; margin-top:2%; height:auto; padding-bottom:15px;">
                <div class="signup-form">
                    <!--login form-->
                    <h2 class="col-sm-offset-5">Đăng Ký</h2>
                    <form id="SignupForm" asp-controller="DangKy" asp-action="Index">
                        <div class="mb-3">
                            <label class="form-label">Họ và Tên</label>
                            <input type="text" class="form-control" id="inputName" asp-for="HoVaTen">
                            <span class="text-danger" id="spVldHoVaTen" asp-validation-for="HoVaTen"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail" asp-for="Email">
                            <span class="text-danger" id="spVldEmail" asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" id="inputPhone" asp-for="SoDienThoai">
                            <span class="text-danger" id="spVldSdt" asp-validation-for="SoDienThoai"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ngày sinh</label>
                            <input class="form-control" id="inputBirthdate" asp-for="NgaySinh">
                            <span class="text-danger" id="spVldNgaySinh" asp-validation-for="NgaySinh"></span>
                        </div>
                        <div class="mb-3">
                            <div class="form-check col-sm-4">
                                <div class="col-sm-2">
                                    <label class="form-check-label" for="checkMale">
                                        Nam
                                    </label>
                                </div>
                                <div class="col-sm-6">
                                    <input class="form-check-input" type="radio" style="height: 20px" id="checkMale" value="Nam" name="gioitinh" asp-for="GioiTinh" checked>
                                </div>

                            </div>
                            <div class="form-check col-sm-8">
                                <div class="col-sm-1">
                                    <label for="checkFemale">
                                        Nữ
                                    </label>
                                </div>
                                <div class="col-sm-3">
                                    <input class="form-check-input" type="radio" style="height: 20px" id="checkFemale" value="Nữ" name="gioitinh" asp-for="GioiTinh">
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tên đăng nhập</label>
                            <input type="text" class="form-control" id="inputTenDangNhap" asp-for="TenDangNhap">
                            <span class="text-danger" id="spVldTenDangNhap" asp-validation-for="TenDangNhap"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="inputPassword1" asp-for="MatKhau">
                            <span class="text-danger" id="spVldMatKhau" asp-validation-for="MatKhau"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nhập lại mật khẩu</label>
                            <input type="password" class="form-control" id="inputPassword2" asp-for="NhapLaiMatKhau">
                            <span class="text-danger" id="spVldNhapLaiMatKhau" asp-validation-for="NhapLaiMatKhau"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" id="inputAddress" asp-for="DiaChi">
                            <span id="spVldDiaChi" asp-validation-for="DiaChi"></span>
                            <span id="spVldModel" class="text-danger">@ViewData["ModelError"]</span>
                        </div>
                        <button type="submit" class="btn btn-default col-sm-offset-5" style="margin-top:3%">Đăng Ký</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section>
