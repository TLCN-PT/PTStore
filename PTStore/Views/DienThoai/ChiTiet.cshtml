                        <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>-->
            </div>
        </div>
    </div>
    <div id="DienThoaiTrongTamGiaPartial"></div>
    <div id="DienThoaiDeXuatPartial"></div>
</section>
<script>
    function LoadDienThoaiDeXuatPartial() {
        $.ajax({
            url: "/Home/DienThoaiDeXuatPartial",
            contentType: "application/html; charset=utf-8",
            type: "GET",
            cache: !0,
            dataType: "html",
            success: function (t) {
                $("#DienThoaiDeXuatPartial").html(t)
            },
            error: function () {
                $("#DienThoaiDeXuatPartial").html("Error when loading DienThoaiDeXuat")
            }
        })
    }

    function LoadDienThoaiTrongTamGiaPartial() {
        $.ajax({
            url: "/Home/DienThoaiTrongTamGiaPartial",
            contentType: "application/html; charset=utf-8",
            type: "GET",
            cache: !0,
            dataType: "html",
            success: function (t) {
                $("#DienThoaiTrongTamGiaPartial").html(t)
            },
            error: function () {
                $("#DienThoaiTrongTamGiaPartial").html("Error when loading DienThoaiTrongTamGia")
            }
        })
    }

    $(document).ready(function () {
        LoadDienThoaiDeXuatPartial();
        LoadDienThoaiTrongTamGiaPartial();
    });
</script>

