
@{
    ViewData["Title"] = "PhanHoi";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container" style="background-color:white; margin-top:3%">
    <div class="row">
        <div class="col-sm-3 " style="background-color:white; text-align:center">
            <ul class="list-group bs-brand-item">
                <li class="list-group-item" style="height:80px">
                    <div>
                        <div class="col-sm-4 pull-left">
                            <img src="https://salt.tikicdn.com/desktop/img/avatar.png">
                        </div>
                        <div class="col-sm-8">
                            <h5>Tài khoản của</h5>
                            <strong style="">Phan Tiên</strong>
                        </div>
                    </div>
                </li>
                <li><a asp-controller="TaiKhoan" asp-action="Index" class="list-group-item">Thông tin tài khoản</a></li>
                <li><a asp-controller="TaiKhoan" asp-action="LichSuMuaHang" class="list-group-item">Quản lý đơn hàng</a></li>
                <li><a asp-controller="TaiKhoan" asp-action="PhanHoi" class="list-group-item">Góp ý</a></li>
            </ul>
        </div>
        <div class="col-sm-9" style="background-color:white">
            <div>
                <div style="margin-top:1%">
                    <a style="font-size:30px; color:#fe980f">Góp ý</a>
                </div>
                <form id="main-contact-form" class="contact-form row col-sm-9 col-sm-offset-2" name="contact-form" method="post" style="margin-top:2%">
                    <div class="form-group col-md-6">
                        <input type="text" name="name" class="form-control" required="required" placeholder="Tên khách hàng">
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" name="phone" class="form-control" required="required" placeholder="Số điện thoại">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="email" name="email" class="form-control" required="required" placeholder="Email">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" name="subject" class="form-control" required="required" placeholder="Chủ đề">
                    </div>
                    <div class="form-group col-md-12">
                        <textarea name="message" id="message" required="required" class="form-control" rows="8" placeholder="Để lại lời nhắn của bạn ở đây"></textarea>
                    </div>
                    <div class="form-group col-md-12">
                        <input type="submit" name="submit" class="btn btn-primary pull-right" style="width:100px" value="Gửi">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

