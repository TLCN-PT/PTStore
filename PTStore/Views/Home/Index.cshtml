<script>
    function LoadThuongHieu() {
        $.ajax({
            url: "/Home/ThuongHieuPartial",
            contentType: "application/html; charset=utf-8",
            type: "GET",
            cache: !0,
            dataType: "html",
            success: function (t) {
                $("#ThuongHieuPartial").html(t)
            },
            error: function () {
                $("#ThuongHieuPartial").html("Error when loading ThuongHieu")
            }
        })
    }

    $(document).ready(function () {
        LoadThuongHieu();
    });
</script>

