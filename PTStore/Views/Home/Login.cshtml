@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@model PTStore.Common.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<section>
    <!--form-->
    <div class="container-fluid" style="margin-bottom: 2%">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4" style="background-color:white; margin-top:2%; height:auto">
                <div class="login-form ">
                    <!--login form-->
                    <h2 class="col-sm-offset-5">Đăng Nhập</h2>
                    <form asp-controller="Home" asp-action="Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">Tên Đăng Nhập</label>
                            <input asp-for="TenDangNhap" type="text" class="form-control" id="inputUsername">
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input type="password" asp-for="MatKhau" class="form-control" id="inputPassword">
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                            <span class="text-danger">@ViewData["ErrorModel"]</span>
                        </div>
                        <button type="submit" class="btn btn-default col-sm-offset-5">Đăng Nhập</button>
                        <div class="card-footer" style="margin-top:5%">
                            <div class="d-flex justify-content-center links col-sm-offset-4">
                                <label style="color:#808080">Chưa có tài khoản?</label> <a href="~/Home/Signup" style="color:#fe980f"> Đăng kí</a>
                            </div>
                            <div class="d-flex justify-content-center links col-sm-offset-5">
                                <a href="~/Home/Forgetpasswork" style="color:#fe980f;">Quên mật khẩu?</a>
                                <p></p>
                            </div>
                        </div>
                    </form>
                </div><!--/login form-->
            </div>

        </div>
    </div>
</section>

