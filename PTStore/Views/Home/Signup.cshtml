
@{
    ViewData["Title"] = "Signup";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
}

<section>
    <!--form-->
    <div class="container-fluid" style="margin-bottom: 2%">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4" style="background-color:white; margin-top:2%; height:690px">
                <div class="signup-form">
                    <!--login form-->
                    <h2 class="col-sm-offset-5">Đăng Ký</h2>
                    <form action="#">
                        <div class="mb-3">
                            <label class="form-label">Họ và Tên</label>
                            <input type="text" class="form-control" id="inputName">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputEmail">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" id="inputPhone">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ngày sinh</label>
                            <input type="date" class="form-control" id="inputBirthdate">
                        </div>
                        <div class="mb-3">
                            <div class="form-check col-sm-4">
                                <div class="col-sm-2">
                                    <label class="form-check-label" for="checkMale">
                                        Nam
                                    </label>
                                </div>
                                <div class="col-sm-6">
                                    <input class="form-check-input" type="radio" style="height: 20px" id="checkMale" name="gioitinh">
                                </div>

                            </div>
                            <div class="form-check col-sm-8">
                                <div class="col-sm-1">
                                    <label for="checkFemale">
                                        Nữ
                                    </label>
                                </div>
                                <div class="col-sm-3">
                                    <input class="form-check-input" type="radio" style="height: 20px" id="checkFemale" name="gioitinh" checked>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mật khẩu</label>
                            <input type="password" class="form-control" id="inputPassword1">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nhập lại mật khẩu</label>
                            <input type="password" class="form-control" id="inputPassword2">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <input type="text" class="form-control" id="inputAddress">
                        </div>
                        <button type="submit" class="btn btn-default col-sm-offset-5" style="margin-top:3%">Đăng Ký</button>
                    </form>
                </div><!--/login form-->
            </div>

        </div>
    </div>
</section>

