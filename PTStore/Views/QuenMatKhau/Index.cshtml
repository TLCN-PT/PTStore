@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section>
    <div class="container-fluid" style="margin-bottom: 2%">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4" style="background-color:white; margin-top:2%; height:auto; width:430px; padding-bottom:10px;">
                <div class="login-form">
                    <p style="font-size:14px; line-height:1.7; margin-top:2%">Quên mật khẩu? Vui lòng nhập địa chỉ email mà bạn đã dùng để đăng ký tài khoản. Bạn sẽ nhận được một mã xác nhận tạo mật khẩu qua email</p>
                    <form asp-action="Index" asp-controller="QuenMatKhau" method="post">
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" required name="email" class="form-control" id="inputEmail">
                            <span class="text-danger">@ViewData["Message"]</span>
                        </div>
                        <button type="submit" class="btn btn-default col-sm-offset-4" style="height:35px; font-size:14px; background-color:#fe980f; color:white; margin-top:3%">Lấy mã xác nhận</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>