@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"] - PTStore</title>
    <link href="~/Guest/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Guest/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Guest/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/Guest/css/price-range.css" rel="stylesheet">
    <link href="~/Guest/css/animate.css" rel="stylesheet">
    <link href="~/Guest/css/main.css" rel="stylesheet">
    <link href="~/Guest/css/responsive.css" rel="stylesheet">
    <link rel="shortcut icon" href="~/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="~/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="~/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="~/images/ico/apple-touch-icon-57-precomposed.png">

    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js"></script>
</head>

<body style="background-color:#F0F0E9">
    <header id="header">
        <!--header-->
        <div class="header_top" style="background-color: #F0F0E9">
            <!--header_top-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="contactinfo">
                            <ul class="nav nav-pills">
                                <li><a href="#"><i class="fa fa-phone"></i> 0858679912</a></li>
                                <li><a href="#"><i class="fa fa-envelope"></i>ptstore.hcmute@gmail.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="social-icons pull-right">
                            <ul class="nav navbar-nav">
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/header_top-->
        <partial name="HeaderMidPartial" />
        <!--/header-middle-->
        <div class="header-bottom" style="background-color: #F38A2D; height:55px; padding-bottom:20px; padding-top:20px">
            <!--header-bottom-->
            <div id="HeaderBottomPartial"></div>
        </div><!--/header-bottom-->
    </header><!--/header-->

    <div style="background-color:#F0F0E9">
        @RenderBody()
    </div>
    <div id="FooterPartial"></div>
    <!--/Footer-->
    <script src="~/Guest/js/jquery.js"></script>
    <script src="~/Guest/js/bootstrap.min.js"></script>
    <script src="~/Guest/js/jquery.scrollUp.min.js"></script>
    <script src="~/Guest/js/price-range.js"></script>
    <script src="~/Guest/js/jquery.prettyPhoto.js"></script>
    <script src="~/Guest/js/main.js"></script>
    <script>
        function LoadHeaderBottomPartial() {
            $.ajax({
                url: "/Home/HeaderBottomPartial",
                contentType: "application/html; charset=utf-8",
                type: "GET",
                cache: !0,
                dataType: "html",
                success: function (t) {
                    $("#HeaderBottomPartial").html(t)
                },
                error: function () {
                    $("#HeaderBottomPartial").html("Error when loading ThuongHieu")
                }
            })
        }

        function LoadFooterPartial() {
            $.ajax({
                url: "/Home/FooterPartial",
                contentType: "application/html; charset=utf-8",
                type: "GET",
                cache: !0,
                dataType: "html",
                success: function (t) {
                    $("#FooterPartial").html(t)
                },
                error: function () {
                    $("#FooterPartial").html("Error when loading ThuongHieu")
                }
            })
        }

        $(document).ready(function () {
            LoadHeaderBottomPartial();
            LoadFooterPartial();
        });
    </script>
    <script>
        function ThemVaoGioHang(id) {
            $.ajax({
                url: '/GioHang/ThemSanPham/' + id,
                dataType: "json",
                type: "POST",
                contentType: 'application/json; charset=utf-8',
                data: { id: id },
                processData: false,
                cache: false,
                success: function (data) {
                    alert(data);
                },
                error: function (xhr) {
                    alert('error');
                }
            });
        }
    </script>
    <style>
        .ulfix {
            text-align: left;
            margin-left: -23px;
            margin-right: 5px;
        }
    </style>
</body>
</html>