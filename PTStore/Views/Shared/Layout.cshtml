    <script src="~/Guest/js/jquery.prettyPhoto.js"></script>
    <script src="~/Guest/js/main.js"></script>
    <script>
        function LoadHeaderBottomPartial() {
            $.ajax({
                url: "/Home/HeaderBottomPartial",
                contentType: "application/html; charset=utf-8",
                type: "GET",
                cache: !0,
                dataType: "html",
                success: function (t) {
                    $("#HeaderBottomPartial").html(t)
                },
                error: function () {
                    $("#HeaderBottomPartial").html("Error when loading ThuongHieu")
                }
            })
        }

        $(document).ready(function () {
            LoadHeaderBottomPartial();
        });
    </script>
</body>
</html>